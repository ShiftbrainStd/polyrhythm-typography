{
  "name": "polyrhythm-typography",
  "description": "Polyrhythm Typography Module",
  "author": "Shiftbrain Inc. (https://www.shiftbrain.com/)",
  "private": true,
  "version": "1.0.0",
  "main": "_index.scss",
  "files": [
    "_index.scss",
    "scss/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devjam/polyrhythm-typography.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devjam/polyrhythm-typography/issues"
  },
  "homepage": "https://github.com/devjam/polyrhythm-typography#readme",
  "scripts": {
    "sass:watch": "chokidar '**/*.scss' -c 'npm run sass:build' --initial",
