    "serve": "browser-sync start -c ./.config/browser-sync.js",
    "start": "npm-run-all -p sass:watch serve",
    "build": "npm run sass:build",
    "lint": "stylelint **/*.scss"
  },
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
